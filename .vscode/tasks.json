// xv6-riscv/.vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rcore-build",
            "type": "shell",
            "isBackground": true,
            "command": "make -C os debug",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".*Now run 'gdb' in another window.",
                        // 要对应编译成功后,一句echo的内容. 此处对应 Makefile Line:78
                        "endsPattern": "."
                    }
                }
            ],
        }
    ]
}